#!/usr/bin/env bash

set -euo pipefail

clang_prefix="${1}"
include="${2}"
output="${3:-${include}/cpp/jank/prelude.hpp.pch}"
shift
shift
shift
flags=$*

# shellcheck disable=SC2086,SC2068
"${clang_prefix}"/bin/clang++ ${flags[@]} \
        -Xclang -fincremental-extensions \
        -Xclang -emit-pch \
        -x c++-header \
        -o "${output}" \
        -c "${include}"/cpp/jank/prelude.hpp
